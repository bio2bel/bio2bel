#########################
# Flake8 Configuration  #
# (.flake8)             #
# (formerly in tox.ini) #
#########################
[flake8]
# flake8
exclude =
    .tox,
    .git,
    __pycache__,
    docs/source/conf.py,
    build,
    dist,
    tests/fixtures/*,
    *.pyc,
    *.egg-info,
    .cache,
    .eggs
format = ${cyan}%(path)s${reset}:${yellow_bold}%(row)d${reset}:${green_bold}%(col)d${reset}: ${red_bold}%(code)s${reset} %(text)s
ignore =
    D105
    E501
    W504  # ignore binary operator line breaks

# flake8-import-order
application-import-names =
	bio2bel
	tests
import-order-style = pycharm

# mccabe
max-complexity = 10
